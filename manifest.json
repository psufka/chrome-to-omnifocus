{
  "manifest_version": 3,
  "name": "Save to OmniFocus",
  "version": "1.0.0",
  "description": "A Chrome extension to save the current tab, link, or selected text as a task in OmniFocus.",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "chrome-to-omnifocus.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end" // Ensure DOM is ready
    }
  ],
  "action": {
    "default_icon": {
      "128": "icon128.png"
    }
  },
  "icons": {
    "128": "icon128.png"
  }
}
